<% include header %>
<% include navbar %>
<div id="container">
  <h1>Employee Records List</h1>
  <table>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
    </tr>
    <!--employees is passed into this file when someone clicks on list.ejs
    let's loop through the query result and name each document 'entry'-->
    <% employees.forEach(function(entry) { %>
        <tr>
          <td><%= entry.firstName %></td>
          <td><%= entry.lastName %></td>
        </tr>
    <% }); %>
  </table>
</div>
<% include scripts %>
<% include footer %>
