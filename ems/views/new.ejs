<% include header %>
<% include navbar %>
<div id="container">
  <h1>Enter New Employee</h1>
  <div class="form-group">
    <label for="txtFirst">First Name:</label>
    <input type="text" class="form-control alert-warning" data-bind="value: firstName" id="txtFirst"/>
  </div>
  <div class="form-group">
    <label for="txtLast">Last Name:</label>
    <input type="text" class="form-control alert-warning" data-bind="value: lastName" id="txtLast"/>
  </div>
  <div class="form-group">
      <label for="txtEmail">Email:</label>
      <input type="text" class="form-control alert-warning" data-bind="value: emailAddress" id="txtEmail"/>
  </div>
  <div class="form-group">
      <label for="txtTitle">Job Title:</label>
      <input type="text" class="form-control alert-warning" data-bind="value: jobTitle" id="txtTitle"/>
  </div>
  <div class="form-group">
      <label for="txtSalary">Salary:</label>
      <input type="text" class="form-control alert-warning" data-bind="value: salary" id="txtSalary"/>
  </div>
  <input id='submit' type="submit" value="Insert">
</div>
<% include scripts %>
<% include footer %>
